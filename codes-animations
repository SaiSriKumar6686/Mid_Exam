//week6-3
import 'package:flutter/material.dart';
void main() => runApp(const IconDisplayApp());
class IconDisplayApp extends StatelessWidget {
  const IconDisplayApp({super.key});
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: const Text('Display an Icon')),
        body: const Center(
          child: Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(Icons.favorite, color: Colors.red, size: 80),
              SizedBox(width: 30), // space between icons
              Icon(Icons.star, color: Colors.amber, size: 100),
            ],
          ),
        ),
      ),
    );
  }
}
//week6-4
import 'package:flutter/material.dart';
void main() => runApp(const IconDisplayApp());
class IconDisplayApp extends StatelessWidget {
  const IconDisplayApp({super.key});
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
        home: Scaffold(
            appBar: AppBar(title: const Text('Display an Icon')),
            body: const Center(
              child:Icon(Icons.favorite, color: Colors.red, size: 80),
              ),
            ),
        );
    }
}
//week6-2
import 'package:flutter/material.dart';
import 'dart:io';
void main() => runApp(MyApp());
class MyApp extends StatelessWidget{
  const MyApp({super.key});
  @override
  Widget build(BuildContext context){
    String imagePath = 'lib/1689516889303.jpg';
    return MaterialApp(
      home:Scaffold(
        appBar:AppBar(title:Text("Flutter Image Demo")),
        body:Center(
          child:Image.file(
            File(imagePath),
            width:100,
            height:100,
        ),
        ),
      ),
    );
  }
}

//WEEK-12

import 'package:flutter/material.dart';
import 'package:animated_text_kit/animated_text_kit.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        backgroundColor: Colors.black,
        body: Center(
          child: AnimatedTextKit(
            animatedTexts: [
              TypewriterAnimatedText(
                'Hello Flutter!',
                textStyle: const TextStyle(
                  fontSize: 32.0,
                  color: Colors.white,
                  fontWeight: FontWeight.bold,
                ),
                speed: const Duration(milliseconds: 100),
              ),
            ],
            totalRepeatCount: 4,
            pause: const Duration(milliseconds: 1000),
            displayFullTextOnTap: true,
            stopPauseOnTap: true,
          ),
        ),
      ),
    );
  }
}